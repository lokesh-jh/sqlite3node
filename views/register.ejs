<%- include("includes/head.ejs")%> <%- include("includes/navigation.ejs")%>

<main class="container mx-auto flex flex-col px-10 justify-items-center">
  <h1 class="text-6xl text-center my-8">Register</h1>
  
  <form action="/register" method="POST" class="flex flex-col py-4  px-40 h-80 justify-center bg-slate-600">
    <input type="text" placeholder="name" name="name" class="bg-slate-200 border-2 border-slate-800 my-2 p-2 w-72 mx-auto"/>
    <input type="text" placeholder="email" name="username" class="bg-slate-200 border-2 border-slate-800 my-2 p-2 w-72 mx-auto"/>
    <input type="password" placeholder="Password" name="password" class="bg-slate-200 border-2 border-slate-800 my-2 p-2 w-72 mx-auto"/>
    <input type="password" placeholder="Confirm Password" name="confirmpassword" class="bg-slate-200 border-2 border-slate-800 my-2 p-2 w-72 mx-auto"/>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
  <h1><%= msg %></h1>

</main>

