<%- include("includes/head.ejs")%> <%- include("includes/navigation.ejs",{loggedin})%>

<main>
  <div class="card w-1/3 bg-base-100 shadow-xl mx-auto">
    <div class="card-body items-center text-center">
      <h1 class="text-4xl m-6">Login</h1>
      <form action="/login" method="POST" class="flex flex-col items-centre">
        <input
          type="text"
          placeholder="Your email"
          name="username"
          class="input input-bordered input-accent w-full max-w-xs my-4"
        />
        <input
          type="text"
          placeholder="Password"
          name="password"
          class="input input-bordered input-accent w-full max-w-xs my-4"
        />
        <button type="submit" class="btn btn-accent">Login</button>
      </form>
      <div class="flex flex-row justify-start m-2">
        <div class="badge badge-outline m-1">forgot password</div>
        <div class="badge badge-outline m-1">signup</div>
        
      </div>
     
    </div>
    <h1><%= message[0] %></h1>
   
  </div>
</main>

<%- include("includes/footer.ejs")%>
